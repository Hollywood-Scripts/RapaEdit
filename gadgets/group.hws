group={}
group["count"]=0
group["prefix$"]="grp_"
group["kind$"]="group"
group["edit$"]=[[<?xml version="1.0" encoding="iso-8859-1"?>
<dialog id="grp_req" title="group">
	<vgroup>
		<radio id="grp_kind">
			<item>Vertical</item>
