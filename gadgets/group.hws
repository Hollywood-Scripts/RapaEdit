			<label>Columns</label>
			<textentry id="grp_columns" accept="0123456789" />
			<label>Horizontal Alignment</label>
			<choice id="grp_halign">
				<item>Default</item>
				<item>Left</item>
				<item>Center</item>
				<item>Right</item>
			</choice>
			<label>Vertical Alignment</label>
			<choice id="grp_valign">
				<item>Default</item>
